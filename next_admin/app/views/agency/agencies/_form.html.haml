= form_for @agency do |f|
  - if @agency.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agency.errors.count, "error")} prohibited this agency from being saved:"
      %ul
        - @agency.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :agency_no
    = f.text_field :agency_no
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :name_kana
    = f.text_field :name_kana
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :division
    = f.text_field :division
  .field
    = f.label :country_cd
    = f.text_field :country_cd
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .field
    = f.label :created_by
    = f.text_field :created_by
  .field
    = f.label :updated_by
    = f.text_field :updated_by
  .field
    = f.label :deleted_by
    = f.text_field :deleted_by
  .actions
    = f.submit 'Save'
