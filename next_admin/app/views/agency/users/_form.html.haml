= form_for [@agency, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :name_kana
    = f.text_field :name_kana
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :pw_lock_flg
    = f.check_box :pw_lock_flg
  .field
    = f.label :pw_lock_at
    = f.datetime_select :pw_lock_at
  .field
    = f.label :pw_lock_release_at
    = f.datetime_select :pw_lock_release_at
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :country_cd
    = f.text_field :country_cd
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .field
    = f.label :created_by
    = f.text_field :created_by
  .field
    = f.label :updated_by
    = f.text_field :updated_by
  .field
    = f.label :deleted_by
    = f.text_field :deleted_by
  .actions
    = f.submit 'Save'
