= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_no
    = f.text_field :company_no
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :name_kana
    = f.text_field :name_kana
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :open_at
    = f.datetime_select :open_at
  .field
    = f.label :cancel_at
    = f.datetime_select :cancel_at
  .field
    = f.label :stop_at
    = f.datetime_select :stop_at
  .field
    = f.label :resumption_at
    = f.datetime_select :resumption_at
  .field
    = f.label :division
    = f.text_field :division
  .field
    = f.label :country_cd
    = f.text_field :country_cd
  .actions
    = f.submit 'Save'
