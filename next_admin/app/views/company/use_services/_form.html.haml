= form_for @use_service do |f|
  - if @use_service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@use_service.errors.count, "error")} prohibited this use_service from being saved:"
      %ul
        - @use_service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_service_id
    = f.number_field :parent_service_id
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :service_no
    = f.text_field :service_no
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :open_at
    = f.datetime_select :open_at
  .field
    = f.label :cancel_at
    = f.datetime_select :cancel_at
  .field
    = f.label :stop_at
    = f.datetime_select :stop_at
  .field
    = f.label :resumption_at
    = f.datetime_select :resumption_at
  .field
    = f.label :max_number
    = f.number_field :max_number
  .field
    = f.label :max_volume
    = f.number_field :max_volume
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .field
    = f.label :created_by
    = f.text_field :created_by
  .field
    = f.label :updated_by
    = f.text_field :updated_by
  .field
    = f.label :deleted_by
    = f.text_field :deleted_by
  .actions
    = f.submit 'Save'
